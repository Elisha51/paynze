{
  "entities": {
    "Product": {
      "title": "Product",
      "description": "Represents an item for sale in the store catalog.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier (SKU)" },
        "productType": { "type": "string", "enum": ["Physical", "Digital", "Service"] },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "retailPrice": { "type": "number" },
        "currency": { "type": "string" },
        "status": { "type": "string", "enum": ["draft", "published", "archived"] },
        "category": { "type": "string" },
        "inventoryTracking": { "type": "string", "enum": ["Track Quantity", "Don't Track", "Track with Serial Numbers"] },
        "costPerItem": { "type": "number", "description": "The cost of the product for profit tracking." },
        "tags": { "type": "array", "items": { "type": "string" } },
        "hasVariants": { "type": "boolean" }
      },
      "required": ["id", "name", "productType", "retailPrice", "currency", "status"]
    },
    "OrderItem": {
      "title": "Order Item",
      "description": "Represents a single line item within an order.",
      "type": "object",
      "properties": {
        "sku": { "type": "string", "description": "The unique SKU of the product variant." },
        "name": { "type": "string", "description": "The name of the product at the time of purchase." },
        "quantity": { "type": "number" },
        "price": { "type": "number", "description": "The price per unit at the time of purchase." }
      },
      "required": ["sku", "name", "quantity", "price"]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a customer's order for one or more products.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the order." },
        "customerId": { "type": "string", "description": "The ID of the customer profile. Links to UserProfile." },
        "customerName": { "type": "string" },
        "customerEmail": { "type": "string" },
        "customerPhone": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "items": { 
          "type": "array", 
          "items": { "$ref": "#/entities/OrderItem" },
          "description": "An array of items included in the order."
        },
        "total": { "type": "number" },
        "currency": { "type": "string" },
        "status": { "type": "string", "enum": ["Awaiting Payment", "Paid", "Shipped", "Delivered", "Cancelled", "Ready for Pickup", "Picked Up", "Attempted Delivery"] },
        "fulfillmentMethod": { "type": "string", "enum": ["Delivery", "Pickup"] },
        "shippingAddress": { "type": "object" },
        "payment": { "type": "object" },
        "shippingCost": { "type": "number" },
        "taxes": { "type": "number" },
        "channel": { "type": "string", "enum": ["Online", "Manual", "POS"] },
        "salesAgentId": { "type": "string", "description": "The ID of the staff member or affiliate who gets sales credit. Links to StaffProfile." },
        "assignedStaffId": { "type": "string", "description": "The ID of the staff member assigned to fulfill the order. Links to StaffProfile." },
        "fulfilledByStaffId": { "type": "string", "description": "The ID of the staff member who completed the fulfillment. Links to StaffProfile." }
      },
      "required": ["id", "customerId", "customerName", "date", "items", "total", "currency", "status"]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a customer's profile information.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "customerGroup": { "type": "string" },
        "lastOrderDate": { "type": "string", "format": "date-time" },
        "totalSpend": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" },
        "source": { "type": "string", "enum": ["Manual", "Online"] }
      },
      "required": ["id", "name", "email"]
    },
    "StaffProfile": {
      "title": "Staff Profile",
      "description": "Represents a staff member's profile.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "avatarUrl": { "type": "string", "format": "uri" },
        "role": { "type": "string", "enum": ["Admin", "Manager", "Sales Agent", "Agent", "Finance Manager", "Affiliate"] },
        "status": { "type": "string", "enum": ["Active", "Pending", "Deactivated", "Pending Verification", "Suspended"] },
        "onlineStatus": { "type": "string", "enum": ["Online", "Offline"] }
      },
      "required": ["id", "name", "email", "role", "status"]
    },
    "Supplier": {
      "title": "Supplier",
      "description": "Represents a vendor from whom products are procured.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "contactName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "address": { "type": "string" },
        "productsSupplied": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "name", "email"]
    },
    "PurchaseOrder": {
        "title": "Purchase Order",
        "description": "A record for an inventory procurement transaction.",
        "type": "object",
        "properties": {
            "id": { "type": "string" },
            "supplierId": { "type": "string" },
            "supplierName": { "type": "string" },
            "items": { "type": "array", "items": { "type": "object" } },
            "totalCost": { "type": "number" },
            "currency": { "type": "string" },
            "status": { "type": "string", "enum": ["Draft", "Sent", "Received", "Cancelled", "Awaiting Approval"] },
            "orderDate": { "type": "string", "format": "date" },
            "expectedDelivery": { "type": "string", "format": "date" }
        },
        "required": ["id", "supplierId", "items", "totalCost", "status", "orderDate"]
    },
    "Transaction": {
      "title": "Transaction",
      "description": "A single financial event in the ledger, representing income or expense.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "description": { "type": "string" },
        "amount": { "type": "number" },
        "currency": { "type": "string" },
        "type": { "type": "string", "enum": ["Income", "Expense"] },
        "category": { "type": "string", "enum": ["Sales", "Inventory", "Salaries", "Utilities", "Marketing", "Other"] },
        "status": { "type": "string", "enum": ["Cleared", "Pending"] },
        "paymentMethod": { "type": "string", "enum": ["Cash", "Mobile Money", "Bank Transfer", "Card", "Other"] }
      },
      "required": ["id", "date", "description", "amount", "type", "category"]
    },
    "Campaign": {
      "title": "Campaign",
      "description": "A marketing initiative, such as an SMS blast or email newsletter.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "status": { "type": "string", "enum": ["Active", "Draft", "Completed", "Scheduled"] },
        "channel": { "type": "string", "enum": ["Email", "SMS", "WhatsApp", "Push"] },
        "sent": { "type": "number" },
        "ctr": { "type": "string" },
        "startDate": { "type": "string", "format": "date" }
      },
      "required": ["id", "name", "status", "channel"]
    },
    "Discount": {
      "title": "Discount",
      "description": "A promotional code for customers.",
      "type": "object",
      "properties": {
        "code": { "type": "string" },
        "type": { "type": "string", "enum": ["Percentage", "Fixed Amount", "Buy X Get Y"] },
        "value": { "type": "number" },
        "status": { "type": "string", "enum": ["Active", "Expired", "Scheduled"] },
        "redemptions": { "type": "number" },
        "minPurchase": { "type": "number" },
        "onePerCustomer": { "type": "boolean" }
      },
      "required": ["code", "type", "value", "status"]
    },
    "Affiliate": {
      "title": "Affiliate",
      "description": "An external marketing partner who earns commissions.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "uniqueId": { "type": "string" },
        "status": { "type": "string", "enum": ["Active", "Pending", "Suspended", "Rejected", "Deactivated"] },
        "pendingCommission": { "type": "number" },
        "linkClicks": { "type": "number" },
        "conversions": { "type": "number" }
      },
      "required": ["id", "name", "uniqueId", "status"]
    },
    "ProductTemplate": {
      "title": "Product Template",
      "description": "A reusable blueprint for creating new products.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "icon": { "type": "string", "description": "Lucide icon name" },
        "author": { "type": "string" },
        "published": { "type": "boolean" },
        "usageCount": { "type": "number" },
        "product": { "$ref": "#/entities/Product" }
      },
      "required": ["id", "name", "product"]
    },
    "EmailTemplate": {
      "title": "Email Template",
      "description": "A reusable template for email communications.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "subject": { "type": "string" },
        "body": { "type": "string" }
      },
      "required": ["id", "name", "subject", "body"]
    },
    "SmsTemplate": {
      "title": "SMS Template",
      "description": "A reusable template for SMS communications.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "message": { "type": "string" }
      },
      "required": ["id", "name", "message"]
    },
    "WhatsAppTemplate": {
      "title": "WhatsApp Template",
      "description": "A reusable template for WhatsApp communications.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "message": { "type": "string" }
      },
      "required": ["id", "name", "message"]
    },
    "Todo": {
      "title": "To-Do Item",
      "description": "A single task for a staff member.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "status": { "type": "string", "enum": ["To Do", "Completed"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "title", "status", "createdAt"]
    },
    "SupportTicket": {
      "title": "Support Ticket",
      "description": "A support request from a merchant.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "subject": { "type": "string" },
        "category": { "type": "string", "enum": ["Billing", "Technical", "General"] },
        "status": { "type": "string", "enum": ["Open", "In Progress", "Resolved"] },
        "lastUpdated": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "subject", "status"]
    },
    "Location": {
      "title": "Location",
      "description": "Represents a physical location like a warehouse or store.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "address": { "type": "string" },
        "isPickupLocation": { "type": "boolean" }
      },
      "required": ["id", "name", "address"]
    },
    "ShippingZone": {
      "title": "Shipping Zone",
      "description": "Defines a geographical area for specific shipping rates.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "countries": { "type": "array", "items": { "type": "string" } },
        "deliveryMethods": { "type": "array", "items": { "type": "object" } }
      },
      "required": ["id", "name", "countries"]
    }
  },
  "auth": {
    "providers": ["email", "google.com"]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Stores individual product details."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Stores customer order information."
    },
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public-facing customer profile data."
    },
    "/staff/{staffId}": {
      "schema": { "$ref": "#/entities/StaffProfile" },
      "description": "Stores internal staff member profiles."
    },
    "/suppliers/{supplierId}": {
        "schema": { "$ref": "#/entities/Supplier" },
        "description": "Stores supplier and vendor information."
    },
    "/purchaseOrders/{poId}": {
        "schema": { "$ref": "#/entities/PurchaseOrder" },
        "description": "Stores purchase order records for procurement."
    },
    "/transactions/{transactionId}": {
      "schema": { "$ref": "#/entities/Transaction" },
      "description": "Stores all financial transactions for the ledger."
    },
    "/campaigns/{campaignId}": {
      "schema": { "$ref": "#/entities/Campaign" },
      "description": "Stores marketing campaign details."
    },
    "/discounts/{discountCode}": {
      "schema": { "$ref": "#/entities/Discount" },
      "description": "Stores all promotional discount codes."
    },
    "/affiliates/{affiliateId}": {
      "schema": { "$ref": "#/entities/Affiliate" },
      "description": "Stores affiliate partner profiles."
    },
    "/productTemplates/{templateId}": {
      "schema": { "$ref": "#/entities/ProductTemplate" },
      "description": "Stores reusable product templates."
    },
    "/emailTemplates/{templateId}": {
      "schema": { "$ref": "#/entities/EmailTemplate" },
      "description": "Stores reusable email templates."
    },
    "/smsTemplates/{templateId}": {
      "schema": { "$ref": "#/entities/SmsTemplate" },
      "description": "Stores reusable SMS templates."
    },
    "/whatsAppTemplates/{templateId}": {
      "schema": { "$ref": "#/entities/WhatsAppTemplate" },
      "description": "Stores reusable WhatsApp templates."
    },
    "/todos/{todoId}": {
      "schema": { "$ref": "#/entities/Todo" },
      "description": "Stores personal to-do items for staff."
    },
    "/supportTickets/{ticketId}": {
      "schema": { "$ref": "#/entities/SupportTicket" },
      "description": "Stores support tickets from merchants."
    },
    "/locations/{locationId}": {
      "schema": { "$ref": "#/entities/Location" },
      "description": "Stores inventory and fulfillment locations."
    },
    "/shippingZones/{zoneId}": {
      "schema": { "$ref": "#/entities/ShippingZone" },
      "description": "Stores shipping zone configurations and rates."
    }
  }
}
